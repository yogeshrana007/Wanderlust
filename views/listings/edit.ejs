<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form
            method="POST"
            action="/listings/<%= listing._id%>?_method=PUT"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
        >
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                    value="<%= listing.title%>"
                    name="listing[title]"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Enter valid title</div>
                <div class="valid-feedback">title looks good!!</div>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea
                    name="listing[description]"
                    class="form-control"
                    required
                >
<%= listing.description%></textarea
                >
                <div class="invalid-feedback">Enter valid description</div>
            </div>
            <div class="mb-3">
                Original Image<br />
                <img src="<%= originalImgUrl %>" class="img-fluid w-25" />
            </div>

            <div class="mb-3">
                <label for="Img-URL" class="form-label">Image</label>
                <input
                    value="<%= listing.image.url%>"
                    name="listing[image][url]"
                    type="file"
                    class="form-control"
                />
                <div class="invalid-feedback">Enter valid URL</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="Price" class="form-label">Price</label>
                    <input
                        value="<%= listing.price%>"
                        name="listing[price]"
                        min="1"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Enter valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="Country" class="form-label">Country</label>
                    <input
                        value="<%= listing.country%>"
                        name="listing[country]"
                        type="text"
                        class="form-control"
                        required
                    />
                    <div class="invalid-feedback">Enter valid country name</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="Location" class="form-label">Location</label>
                <input
                    value="<%= listing.location%>"
                    name="listing[location]"
                    type="text"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Enter valid location</div>
            </div>

            <button class="btn btn-dark edit-btn mt-3">Update</button>
        </form>
    </div>
</div>
